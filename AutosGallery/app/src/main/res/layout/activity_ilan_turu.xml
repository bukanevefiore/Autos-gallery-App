<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.IlanTuruActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="İlan Türü Bilgilerini giriniz"
        android:layout_margin="50dp"></TextView>



    <Spinner
            android:layout_width="280dp"
            android:layout_height="40dp"
        android:layout_marginBottom="40dp"
            android:id="@+id/ilanturuSpinner"
            android:layout_gravity="center"></Spinner>
    <Spinner
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/kimdenSpinner"
        android:layout_gravity="center"></Spinner>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/ilanTuruButon"
        android:text="İLERİ"></Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/ilanTuruButonGeri"
        android:text="GERİ"></Button>

</LinearLayout>