<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:id="@+id/mainActivitySlider"
        android:background="@drawable/ic_menu_gallery"
        android:orientation="horizontal">

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/mainActivitySliderFavori"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>
        <me.relex.circleindicator.CircleIndicator
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/mainActivitysliderNokta"
            app:ci_drawable="@color/cardview_dark_background"
            app:ci_drawable_unselected="@color/black"
            android:layout_alignParentBottom="true">

        </me.relex.circleindicator.CircleIndicator>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/mainActivitySlider"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:background="@drawable/buton_back"
            android:layout_gravity="center"
            android:text="İLANLAR"
            android:textSize="15dp"
            android:textColor="#000"
            android:id="@+id/ilanlarButon"
            android:layout_marginTop="30dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:background="@drawable/buton_back"
            android:layout_gravity="center"
            android:text="İLAN VER"
            android:id="@+id/ilanVerButon"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:background="@drawable/buton_back"
            android:text="İLETİŞİM BİLGİLERİ"
            android:textSize="15dp"
            android:id="@+id/iletisimBilgileri"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="?attr/actionModePasteDrawable"
            android:background="@drawable/buton_back"
            android:text="FAVORİ İLANLAR"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:background="@drawable/buton_back"
            android:text="MESAJLARIM"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_send"
            android:background="@drawable/buton_back"
            android:text="İLANLARIM"
            android:id="@+id/ilanlarimMenuButon"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>


    </LinearLayout>

</LinearLayout>