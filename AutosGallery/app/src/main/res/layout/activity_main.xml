<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:id="@+id/slideLayout"
        android:background="@drawable/ic_menu_gallery"
        android:orientation="horizontal">

        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/slideLayout"
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:background="@drawable/buton_back"
            android:layout_gravity="center"
            android:text="İLANLAR"
            android:textSize="15dp"
            android:textColor="#000"
            android:id="@+id/satilik"
            android:layout_marginTop="30dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_manage"
            android:background="@drawable/buton_back"
            android:layout_gravity="center"
            android:text="İLAN VER"
            android:id="@+id/ilanVerButon"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:background="@drawable/buton_back"
            android:text="İLETİŞİM BİLGİLERİ"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="?attr/actionModePasteDrawable"
            android:background="@drawable/buton_back"
            android:text="FAVORİ İLANLAR"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:background="@drawable/buton_back"
            android:text="MESAJLARIM"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>
        <Button
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/ic_menu_send"
            android:background="@drawable/buton_back"
            android:text="İLANLARIM"
            android:id="@+id/ilanlarimMenuButon"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"></Button>


    </LinearLayout>

</LinearLayout>